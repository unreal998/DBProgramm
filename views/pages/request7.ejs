<% include ../partials/header %>
<form action="http://localhost:4000/BDiZ/request7" method="post" class="col s12">
	<div class="form-group row">
		<label for="status" class="col-2 col-form-label">Введіть статус</label>
		<div class="col-10">
			<input type="text" name="status" value="" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="start" class = "col-2 col-form-label">Введіть дату</label>
			<div class="col-10">
				<input type="date" name="start" value="" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Вивести" class="btn btn-primary btn-lg">
			<a href="/" class="btn btn-success btn-lg">На головну</a>
		</div>
	</div>
	<div class "=">
		<div class="col s12">
			<% if (items.length > 0){%>
			<table class = "table">
				<thead>
					<tr>
						<th style="width:20%; text-align:center">Номер накладної</th>
						<th style="width:20%; text-align:center">Опис</th>
						<th style="width:10%; text-align:center">Вартість</th>
						<th style="width:20%; text-align:center">Тип роботи</th>
						<th style="width:20%; text-align:center">Початок</th>
						<th style="width:10%; text-align:center">Статус</th>
					</tr>
				</thead>
			<tbody>
				<% items.forEach(function(item, index){ %>
					<tr>
							<td style="width:20%; text-align:center"><%= item.list %></td>
							<td style="width:20%; text-align:center"><%= item.description %></td>
							<td style="width:10%; text-align:center"><%= item.cost %></td>
							<td style="width:20%; text-align:center"><%= item.typeOfWork %></td>
							<td style="width:20%; text-align:center"><%= item.start %></td>
							<td style="width:10%; text-align:center"><%= item.status %></td>
					</tr>			
					<% }); %>
				</tbody>
			</table>
		<% }else{ %>
			<p>No records</p>
		<% } %>
	</div>
</div>
</form>
<% include ../partials/footer %>