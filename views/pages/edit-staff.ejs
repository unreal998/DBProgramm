<% include ../partials/header %>
<br>
<form action="http://localhost:4000/BDiZ/staff/edit/<%= item.phoneNumber %>" method="post" class="col s12">
	<input type="hidden" name="id_personal" value="">
	<div class="form-group row">
		<label for="name" class="col-2 col-form-label">ПІБ</label>
		<div class="col-10">
			<input type="text" name="name" value="<%= item.name %>" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="birthday" class = "col-2 col-form-label">Дата народження</label>
			<div class="col-10">
				<input type="date" name="birthday" value="<%= item.birthday %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="phoneNumber" class = "col-2 col-form-label">Номер телефону</label>
			<div class="col-10">
				<input type="text" name="phoneNumber" value="<%= item.phoneNumber %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="activeInvoice" class = "col-2 col-form-label">Активна накладна</label>
			<div class="col-10">
				<input type="text" name="activeInvoice" value="<%= item.activeInvoice %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="WorkExp" class = "col-2 col-form-label">Стаж роботи</label>
			<div class="col-10">
				<input type="text" name="WorkExp" value="<%= item.WorkExp %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Зберегти" class="btn btn-primary btn-lg">
		</div>
	</div>
</form>
<% include ../partials/footer %>