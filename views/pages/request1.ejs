<% include ../partials/header %>
<form action="http://localhost:4000/BDiZ/request1" method="post" class="col s12">
		<div class="form-group row">
		<label for="start" class="col-2 col-form-label">Введіть дату</label>
		<div class="col-10">
			<input type="date" name="start" value="" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="typeOfWork" class = "col-2 col-form-label">Введіть тип робот</label>
			<div class="col-10">
				<input type="text" name="typeOfWork" value="" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Вивести" class="btn btn-primary btn-lg">
			<a href="/" class="btn btn-success btn-lg">На головну</a>
		</div>
	</div>
	<div class "=">
		<div class="col s12">
			<% if (items.length > 0){%>
			<table class = "table">
				<thead>
					<tr>
						<th style="width:20%; text-align:center">ПІБ</th>
						<th style="width:30%; text-align:center">Номер телефону</th>
						<th style="width:10%; text-align:center">Постійний</th>
						<th style="width:10%; text-align:center">Дата початку роботи</th>
						<th style="width:10%; text-align:center">Тип несправності</th>	
					</tr>
				</thead>
			<tbody>
				<% items.forEach(function(item, index){ %>
					<tr>
							<td style="width:20%; text-align:center"><%= item.name %></td>
							<td style="width:30%; text-align:center"><%= item.phone %></td>
							<td style="width:10%; text-align:center"><%= item.often %></td>
							<td style="width:10%; text-align:center"><%= item.start %></td>
							<td style="width:10%; text-align:center"><%= item.typeOfWork %></td>
							</td>
						</tr>			
					<% }); %>
				</tbody>
			</table>
		<% }else{ %>
			<p>No records</p>
		<% } %>
	</div>
</div>
</form>

<% include ../partials/footer %>