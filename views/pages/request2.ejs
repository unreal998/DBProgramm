<% include ../partials/header %>
<form action="http://localhost:4000/BDiZ/request2" method="post" class="col s12">
	<div class="form-group row">
		<label for="aviable" class="col-2 col-form-label">Введіть кількість</label>
		<div class="col-10">
			<input type="text" name="aviable" value="" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="costOfGood" class = "col-2 col-form-label">Введіть вартість товару</label>
			<div class="col-10">
				<input type="text" name="costOfGood" value="" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Вивести" class="btn btn-primary btn-lg">
			<a href="/" class="btn btn-success btn-lg">На головну</a>
		</div>
	</div>
	<div class "=">
		<div class="col s12">
			<% if (items.length > 0){%>
			<table class = "table">
				<thead>
					<tr>
						<th style="width:30%; text-align:center">Найменування товару</th>
						<th style="width:30%; text-align:center">Код товару</th>
						<th style="width:10%; text-align:center">Кількість</th>
						<th style="width:30%; text-align:center">Вартість товару</th>
					</tr>
				</thead>
			<tbody>
				<% items.forEach(function(item, index){ %>
					<tr>
							<td style="width:30%; text-align:center"><%= item.nameOfGoods %></td>
							<td style="width:30%; text-align:center"><%= item.productCode %></td>
							<td style="width:10%; text-align:center"><%= item.aviable %></td>
							<td style="width:30%; text-align:center"><%= item.costOfGood %></td>
					</tr>			
					<% }); %>
				</tbody>
			</table>
		<% }else{ %>
			<p>No records</p>
		<% } %>
	</div>
</div>
</form>
<% include ../partials/footer %>