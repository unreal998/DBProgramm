<% include ../partials/header %>
<br>
<form action="http://localhost:4000/BDiZ/systemdiscount/edit/<%= item.phoneNumber %>" method="post" class="col s12">
	<input type="hidden" name="id_discount" value="">
	<div class="form-group row">
		<label for="name" class="col-2 col-form-label">ПІБ</label>
		<div class="col-10">
			<input type="text" name="name" value="<%= item.name %>" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="phoneNumber" class = "col-2 col-form-label">Номер телефону</label>
			<div class="col-10">
				<input type="text" name="phoneNumber" value="<%= item.phoneNumber %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="discount" class = "col-2 col-form-label">Знижка</label>
			<div class="col-10">
				<input type="text" name="discount" value="<%= item.discount %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="ToNextLevel" class = "col-2 col-form-label">До наступного рівня</label>
			<div class="col-10">
				<input type="text" name="ToNextLevel" value="<%= item.ToNextLevel %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Зберегти" class="btn btn-primary btn-lg">
		</div>
	</div>
</form>
<% include ../partials/footer %>