<% include ../partials/header %>
<br>
<form action="http://localhost:4000/BDiZ/storage/edit/<%= item.productCode %>" method="post" class="col s12">
	<input type="hidden" name="id_storage" value="">
	<div class="form-group row">
		<label for="nameOfGoods" class="col-2 col-form-label">Найменування товару</label>
		<div class="col-10">
			<input type="text" name="nameOfGoods" value="<%= item.nameOfGoods %>" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="productCode" class = "col-2 col-form-label">Код товару</label>
			<div class="col-10">
				<input type="text" name="productCode" value="<%= item.productCode %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="dateOfRecive" class = "col-2 col-form-label">Дата прийому товару</label>
			<div class="col-10">
				<input type="date" name="dateOfRecive" value="<%= item.dateOfRecive %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="aviable" class = "col-2 col-form-label">Кількість</label>
			<div class="col-10">
				<input type="text" name="aviable" value="<%= item.aviable %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="costOfGood" class = "col-2 col-form-label">Вартість</label>
			<div class="col-10">
				<input type="text" name="costOfGood" value="<%= item.costOfGood %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Зберегти" class="btn btn-primary btn-lg">
		</div>
	</div>
</form>
<% include ../partials/footer %>