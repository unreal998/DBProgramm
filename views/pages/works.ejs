<% include ../partials/header %>
	<div class = "">
		<div class="col s12">
			<a href="/BDiZ/works/add" class="btn btn-success btn-lg mt-1">Додати замовлення</a>
			<a href="/" class="btn btn-success btn-lg mt-1">На головну</a>
		</div>
	</div>
	<br>

	<div class "=">
		<div class="col s12">
			<% if (items.length > 0){%>
			<table class = "table">
				<thead>
					<tr>
						<th style="width:20%; text-align:center">Оnис</th>
						<th style="width:10%; text-align:center">Код товара на заміну</th>
						<th style="width:10%; text-align:center">Тип несправності</th>
						<th style="width:10%; text-align:center">Дата початку роботи</th>
						<th style="width:10%; text-align:center">Номер накладної</th>
						<th style="width:10%; text-align:center">Статус готовності</th>
						<th style="width:10%; text-align:center">Вартість</th>
						<th solspan="2" style ="width:20%; text-align:center">Дії</th>
					</tr>
				</thead>
			<tbody>
				<% items.forEach(function(item, index){ %>
					<tr>
							<td style="width:20%; text-align:center"><%= item.description %></td>
							<td style="width:10%; text-align:center"><%= item.productCodeToReplace %></td>
							<td style="width:10%; text-align:center"><%= item.typeOfWork %></td>
							<td style="width:10%; text-align:center"><%= item.start %></td>
							<td style="width:10%; text-align:center"><%= item.list %></td>
							<td style="width:10%; text-align:center"><%= item.status %></td>
							<td style="width:10%; text-align:center"><%= item.cost %></td>
							<td solspan="2" style="width:20%; text-align:center"><%= item.name %>
								<a href="/BDiZ/works/edit/<%= item.list %>" class="btn btn-success">Редагувати</a>
								<a href="/BDiZ/works/delete/<%= item.list %>" class="btn btn-danger">Видалити</a>
							</td>
						</tr>			
					<% }); %>
				</tbody>
			</table>
		<% }else{ %>
			<p>No records</p>
		<% } %>
	</div>
</div>
<% include ../partials/footer %>