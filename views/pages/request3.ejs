<% include ../partials/header %>
<form action="http://localhost:4000/BDiZ/request3" method="post" class="col s12">
	<div class="form-group row">
		<label for="productCodeToReplace" class="col-2 col-form-label">Введіть код товару на заміну</label>
		<div class="col-10">
			<input type="text" name="productCodeToReplace" value="" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="list" class = "col-2 col-form-label">Введіть номер накладної</label>
			<div class="col-10">
				<input type="text" name="list" value="" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Вивести" class="btn btn-primary btn-lg">
			<a href="/" class="btn btn-success btn-lg">На головну</a>
		</div>
	</div>
	<div class "=">
		<div class="col s12">
			<% if (items.length > 0){%>
			<table class = "table">
				<thead>
					<tr>
						<th style="width:40%; text-align:center">Найменування товару</th>
						<th style="width:30%; text-align:center">Код товару на заміну</th>
						<th style="width:30%; text-align:center">Накладна</th>
					</tr>
				</thead>
			<tbody>
				<% items.forEach(function(item, index){ %>
					<tr>
							
							<td style="width:40%; text-align:center"><%= item.nameOfGoods %></td>
							<td style="width:30%; text-align:center"><%= item.productCodeToReplace %></td>
							<td style="width:30%; text-align:center"><%= item.list %></td>
					</tr>			
					<% }); %>
				</tbody>
			</table>
		<% }else{ %>
			<p>No records</p>
		<% } %>
	</div>
</div>

</form>
<% include ../partials/footer %>