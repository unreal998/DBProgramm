<% include ../partials/header %>
<br>
<form action="http://localhost:4000/BDiZ/works/edit/<%= item.list %>" method="post" class="col s12">
	<input type="hidden" name="id_works" value="">
	<div class="form-group row">
		<label for="description" class="col-2 col-form-label">Опис</label>
		<div class="col-10">
			<input type="textarea" name="description" value="<%= item.description %>" class="form-control">
		</div>
	</div>
	<div class="form-group row">
		<label for="productCodeToReplace" class = "col-2 col-form-label">Код товару на заміну</label>
			<div class="col-10">
				<input type="text" name="productCodeToReplace" value="<%= item.productCodeToReplace %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="typeOfWork" class = "col-2 col-form-label">Тип роботи</label>
			<div class="col-10">
				<input type="text" name="typeOfWork" value="<%= item.typeOfWork %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="start" class = "col-2 col-form-label">Дата початку роботи</label>
			<div class="col-10">
				<input type="date" name="start" value="<%= item.start %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="list" class = "col-2 col-form-label">Код накладної</label>
			<div class="col-10">
				<input type="text" name="list" value="<%= item.list %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="status" class = "col-2 col-form-label">Статус готовності</label>
			<div class="col-10">
				<input type="text" name="status" value="<%= item.status %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<label for="cost" class = "col-2 col-form-label">Вартість</label>
			<div class="col-10">
				<input type="text" name="cost" value="<%= item.cost %>" class="form-control">
			</div>
	</div>
	<div class="form-group row">
		<div class="col-10">
			<input type="submit" name="submit" value="Зберегти" class="btn btn-primary btn-lg">
		</div>
	</div>
</form>
<% include ../partials/footer %>